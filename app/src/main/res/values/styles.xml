<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HeaderText" parent="BaseFontStyle">
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:maxLines">@integer/header_max_line</item>
    </style>

    <style name="OtherText" parent="BaseFontStyle">
        <item name="android:textSize">@dimen/other_font_size</item>
        <item name="android:maxLines">@integer/others_max_line</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>

    <style name="ErrorLayoutText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
